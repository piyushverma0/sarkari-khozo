<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.SarkariKhozo" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/status_bar_light</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
    </style>

    <style name="Theme.SarkariKhozo" parent="Base.Theme.SarkariKhozo" />

    <!-- Splash Screen Theme -->
    <style name="Theme.SarkariKhozo.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SarkariKhozo</item>
    </style>

    <!-- Custom Component Styles -->
    
    <!-- Card Styles -->
    <style name="Widget.SarkariKhozo.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.SarkariKhozo.Card.Job" parent="Widget.SarkariKhozo.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.SarkariKhozo.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.SarkariKhozo.Button.Primary" parent="Widget.SarkariKhozo.Button">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.SarkariKhozo.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/md_theme_light_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.SarkariKhozo.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SarkariKhozo.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SarkariKhozo.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <style name="TextAppearance.SarkariKhozo.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.SarkariKhozo.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.SarkariKhozo.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="android:background">@color/md_theme_light_surface</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.SarkariKhozo.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_light_surface</item>
        <item name="titleTextColor">@color/md_theme_light_onSurface</item>
        <item name="subtitleTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Search View Style -->
    <style name="Widget.SarkariKhozo.SearchView" parent="Widget.Material3.SearchView">
        <item name="android:layout_margin">16dp</item>
        <item name="queryBackground">@color/md_theme_light_surfaceVariant</item>
    </style>

</resources>